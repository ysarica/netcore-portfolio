
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section title{ Portfolyo }
@section pagetitle{ Portfolyo}
@section sitemap{ Portfolyo}



<div class="card card-outline card-primary">
    <div class="card-header">
        <h3 class="card-title">Portfolyo İşlemleri </h3>

        <div class="card-tools">

            <div class="btn-group">
                <a href="/Portfolio/PCategory/" class="btn btn-secondary">Portfolyo Kategori İşlemleri</a>
                <button class="btn btn-primary" data-toggle="modal" data-target="#modal-addPortfolioCategory"><i class="fa fa-plus"></i> Portfolyo Ekle </button>

            </div>
        </div>
        <!-- /.card-tools -->
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row" id="portfolio-cards">


        </div>
        <div class="row" id="">


            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                <div class="card bg-light d-flex flex-fill">
                    <div class="card-header text-muted border-bottom-0">
                        Kategori Adı:Kadi
                    </div>
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col-7">
                                <h2 class="lead"><b>Portfolio Baslik:Baslik</b></h2>
                                <p class="text-muted text-sm"><b>Portfolio Sirket: </b> Şirket </p>
                                <p class="text-muted text-sm"><b>Portfolio Bitis Tarihi: </b> Tarihi </p>
                                <p class="text-muted text-sm"><b>Portfolio Kullanılan Teknoloji: </b> Teknoloji </p>
                                <p class="text-muted text-sm"><b>Portfolio Link : </b> Link </p>
                            </div>
                            <div class="col-5 text-center">
                                <img src="/adminlte/dist/img/user1-128x128.jpg" alt="user-avatar" class="img-circle img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <div class="btn-group">
                                <a href="#" class="btn btn-sm btn-warning">
                                    <i class="fa fa-pen"></i> Detaylı Düzenle
                                </a>
                                <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Sil</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- /.card-body -->
</div>


<!--User PortfolioCategory Add Modal Start-->
<div class="modal fade" id="modal-addPortfolioCategory">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Portfolyo Kategori Ekle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="PortfolioCategory-form">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Portfolyo Kategori Adı</label>
                        <input type="text" class="form-control" id="PCategoryName" name="PCategoryName" required>
                    </div>

                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button type="submit" id="addPortfolioCategoryButton" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!--User PortfolioCategory Add Modal Finish-->
<!--User PortfolioCategory Update Modal Start-->
<div class="modal fade" id="modal-updatePortfolioCategory">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Portfolyo Kategori Güncelleme</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="update-portfoliocategory-form">
                <div class="modal-body">
                    <input type="hidden" id="PCategoryID" name="PCategoryID" />
                    <div class="form-group">
                        <label for="title">Portfolyo Kategori Adı:</label>
                        <input type="text" class="form-control" id="PCategoryNameU" name="PCategoryNameU" required>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!--User PortfolioCategory Update Modal Finish-->

<script src="~/js/Portfolio.js"></script>
<script>
    $(document).ready(function () {
        getPortfolioData();
    });
</script>
