
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SRCADMIN | @RenderSection("title", required: false)</title>
    @await Html.PartialAsync("/Views/AdminLayoutPartial/_LayoutHead.cshtml")
    @RenderSection("css", required: false)

</head>
<body class="hold-transition sidebar-mini layout-fixed">

    <div class="wrapper">

        <!-- Preloader -->
        @*<div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__shake" src="~/adminlte/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
            </div>*@

        <!-- Navbar -->
        @await Html.PartialAsync("/Views/AdminLayoutPartial/_LayoutNavbar.cshtml")
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/images/default/admin-logo.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">SRCADMİN</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @await Html.PartialAsync("/Views/AdminLayoutPartial/_LayoutUser.cshtml")
           


                    <!-- Sidebar Menu -->
                    @await Html.PartialAsync("/Views/AdminLayoutPartial/_LayoutSidebarMenu.cshtml")
                    <!-- /.sidebar-menu -->
                </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@RenderSection("pagetitle", required: false)</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/Admin/Index/">Anasayfa</a></li>
                                <li class="breadcrumb-item active">@RenderSection("sitemap", required: false)</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        @await Html.PartialAsync("/Views/AdminLayoutPartial/_LayoutFooter.cshtml")


        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    @await Html.PartialAsync("/Views/AdminLayoutPartial/_LayoutScripts.cshtml")
    @RenderSection("script", required: false)
</body>
</html>
