                    <div class="form-group">
                        <label for="title">Hizmet İsmi</label>
                        <input type="text" class="form-control" id="ServiceNameU" name="ServiceNameU" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Hizmet Açıklaması</label>
                        <textarea class="form-control" id="ServiceDescriptionU" name="ServiceDescriptionU" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
